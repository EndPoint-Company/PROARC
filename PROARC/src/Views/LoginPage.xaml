<Page
    x:Class="PROARC.src.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PROARC.src.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="1277" Height="687">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <Border Background="#002B5B" Grid.Column="0" CornerRadius="20,0,0,20">
            <Grid VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="180" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Image Grid.Row="0" Source="/Assets/proarc-logo-white-256x256.png" Margin="0, 0, 0, 20" />
                <TextBlock 
                    Grid.Row="1"
                    Text="Bem-vindo de volta!" 
                    Foreground="White" 
                    FontSize="35" 
                    FontWeight="Bold" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center" />
            </Grid>
        </Border>

        <Border Background="#FFFFFF" Grid.Column="1" CornerRadius="0,20,20,0" Padding="30">
            <StackPanel VerticalAlignment="Center" Spacing="70" HorizontalAlignment="Center">
                <StackPanel HorizontalAlignment="Center" Spacing="5">
                    <TextBlock 
                        Text="PROARC" 
                        FontSize="40" 
                        FontWeight="Bold" 
                        Foreground="#002B5B" 
                        HorizontalAlignment="Center" />
                    <TextBlock 
                        Text="LOGIN" 
                        FontSize="16" 
                        Foreground="#002B5B" 
                        HorizontalAlignment="Center" />
                </StackPanel>

                <StackPanel Spacing="10">
                    <StackPanel Height="20">
                        <TextBlock
                            x:Name="ErrorTextBlock"
                            Text="Chave incorreta. Tente novamente."
                            Foreground="Red"
                            FontSize="14"
                            HorizontalAlignment="Left"
                            Visibility="Collapsed" />
                    </StackPanel>

                    <PasswordBox
                        Name="CaixaSenha"
                        Padding="10"
                        Width="269"
                        PlaceholderText="Chave de acesso"
                        Background="White"
                        BorderBrush="LightGray"
                        BorderThickness="1"
                        CornerRadius="10"
                        FontSize="16"
                        PasswordChar="*"
                        KeyDown="PasswordBox_KeyDown" />

                    <CheckBox 
                        Content="Lembre de mim" 
                        FontSize="14" 
                        Foreground="#002B5B" 
                        HorizontalAlignment="Left" />
                </StackPanel>

                <Button 
                    x:Name="LoginButton"
                    Click="LoginButton_Click"
                    Content="Entrar" 
                    Background="#002B5B" 
                    Foreground="#FFFF" 
                    FontSize="18"  
                    CornerRadius="10" 
                    Width="269" 
                    Height="40" 
                    HorizontalAlignment="Center" />
            </StackPanel>
        </Border>
    </Grid>
</Page>
