<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="PROARC.src.Views.ProcessosListaPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PROARC.src.Views"
    xmlns:models="using:PROARC.src.Models.Arquivos"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Border CornerRadius="10" Margin="50, 0">
        <Grid Padding="40" CornerRadius="10">
            <StackPanel Spacing="20">
                <!-- CabeÃ§alho -->
                <TextBlock Text="Lista de Processos" FontSize="24" FontWeight="Bold" />

                <!-- TreeView -->
                <TreeView ItemsSource="{Binding Processos}" CanDragItems="False" AllowDrop="True">
                    <TreeView.ItemTemplate>
                        <DataTemplate x:DataType="models:ProcessoAdministrativo">
                            <StackPanel Orientation="Horizontal"
                                        RightTapped="Processo_RightTapped"
                                        Margin="0,5"
                                        ToolTipService.ToolTip="Detalhes do Processo"
                                        PointerEntered="ProcessoItem_PointerEntered"
                                        PointerExited="ProcessoItem_PointerExited">
                                <TextBlock Text="{x:Bind Titulo}" FontSize="16" Margin="5,0,10,0" />
                                <TextBlock Text="{x:Bind Reclamante.Nome}" FontSize="16" Margin="5,0,10,0" />
                                <TextBlock Text="{x:Bind Reclamante.Cpf}" FontSize="16" Margin="5,0,10,0" />
                                <TextBlock Text="{x:Bind Reclamado.Nome}" FontSize="16" Margin="5,0,10,0" />
                                <TextBlock Text="{x:Bind DataDeCriacao}" FontSize="16" Margin="5,0,10,0" />
                                <TextBlock Text="{x:Bind DataDaAudiencia}" FontSize="16" Margin="5,0,10,0" />
                                <TextBlock Text="{x:Bind Motivo.Nome}" FontSize="16" Margin="5,0,10,0" />
                                <TextBlock Text="{x:Bind Status}" FontSize="16" Margin="5,0,10,0" />

                                <!-- Flyout para exibir detalhes -->
                                <FlyoutBase.AttachedFlyout>
                                    <Flyout>
                                        <StackPanel>
                                            <TextBlock Text="Detalhes do Processo" FontWeight="Bold" Margin="0,0,0,10" />
                                            <TextBlock Text="{x:Bind Reclamante.Nome}" />
                                            <TextBlock Text="{x:Bind Reclamado.Nome}" />
                                            <TextBlock Text="{x:Bind Motivo.Nome}" />
                                            <TextBlock Text="{x:Bind Status}" />
                                        </StackPanel>
                                    </Flyout>
                                </FlyoutBase.AttachedFlyout>
                            </StackPanel>
                        </DataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>
            </StackPanel>
        </Grid>
    </Border>
</Page>
