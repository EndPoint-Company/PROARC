<Page
    x:Class="PROARC.src.Views.ProcessosListaPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PROARC.src.Views"
    xmlns:models="using:PROARC.src.Models.Arquivos"
    xmlns:converters="using:PROARC.src.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <converters:NullToNAConverter x:Key="NullToNAConverter"/>
    </Page.Resources>

    <Grid Background="#FAFAFA">
        <Grid.Resources>
            <Style TargetType="TextBox">
                <Setter Property="Margin" Value="5"/>
                <Setter Property="Padding" Value="10"/>
                <Setter Property="CornerRadius" Value="5"/>
            </Style>

            <ThemeShadow x:Name="SharedShadow" />
        </Grid.Resources>
        <ScrollViewer>

            <StackPanel Spacing="10" Padding="40">
                <TextBlock Text="Processos Administrativos" FontSize="32" FontWeight="Bold" Margin="40,40,160,0" />

                <StackPanel Orientation="Horizontal" Spacing="10">
                    <TextBox PlaceholderText="Pesquisar" Width="300"/>
                    <Button Content="Novo processo" Background="#002D62" Foreground="White" Padding="10,5"/>

                    <!-- Botão para selecionar Data Início e Data Fim -->
                    <Button Content="Data" Padding="10,5">
                        <Button.Flyout>
                            <Flyout Placement="BottomEdgeAlignedLeft" ShowMode="Standard">
                                <StackPanel Padding="10">
                                    <TextBlock Text="Data Início"/>
                                    <CalendarDatePicker x:Name="DataInicio"
                                        />

                                    <TextBlock Text="Data Fim" Margin="0,10,0,0"/>
                                    <CalendarDatePicker x:Name="DataFim"
                                        />
                                </StackPanel>
                            </Flyout>
                        </Button.Flyout>
                    </Button>



                    <Button Content="Status"/>
                    <Button Content="Filtro"/>
                </StackPanel>

                <Grid Margin="20,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200" />
                        <ColumnDefinition Width="200" />
                        <ColumnDefinition Width="250" />
                        <ColumnDefinition Width="200" />
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="200" />
                        <ColumnDefinition Width="200" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Nº Processo" FontSize="24" FontWeight="SemiBold" Grid.Column="0" />
                    <TextBlock Text="Reclamante" FontSize="24" FontWeight="SemiBold" Grid.Column="1" />
                    <TextBlock Text="CPF do Reclamante" FontSize="24" FontWeight="SemiBold" Grid.Column="2" />
                    <TextBlock Text="Reclamado" FontSize="24" FontWeight="SemiBold" Grid.Column="3" />
                    <TextBlock Text="Criado" FontSize="24" FontWeight="SemiBold" Grid.Column="4" />
                    <TextBlock Text="Audiência" FontSize="24" FontWeight="SemiBold" Grid.Column="5" />
                    <TextBlock Text="Motivo" FontSize="24" FontWeight="SemiBold" Grid.Column="6" />
                    <TextBlock Text="Status" FontSize="24" FontWeight="SemiBold" Grid.Column="7" />
                </Grid>

                <ListView ItemsSource="{Binding Processos}">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="models:Reclamacao">
                            <Grid RightTapped="Processo_RightTapped">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200" />
                                    <ColumnDefinition Width="200" />
                                    <ColumnDefinition Width="250" />
                                    <ColumnDefinition Width="200" />
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="200" />
                                    <ColumnDefinition Width="200" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="{x:Bind Titulo, Converter={StaticResource NullToNAConverter}}" Grid.Column="0" FontSize="16" Margin="5" TextTrimming="CharacterEllipsis">
                                    <ToolTipService.ToolTip>
                                        <ToolTip Content="{x:Bind Titulo}" Placement="Mouse"/>
                                    </ToolTipService.ToolTip>
                                </TextBlock>

                                <TextBlock Text="{x:Bind Reclamante.Nome, Converter={StaticResource NullToNAConverter}}" Grid.Column="1" FontSize="16" Margin="5" TextTrimming="CharacterEllipsis">
                                    <ToolTipService.ToolTip>
                                        <ToolTip Content="{x:Bind Reclamante.Nome}" Placement="Mouse"/>
                                    </ToolTipService.ToolTip>
                                </TextBlock>

                                <TextBlock Text="{x:Bind Reclamante.CpfFormatado, Converter={StaticResource NullToNAConverter}}" Grid.Column="2" FontSize="16" Margin="5" TextTrimming="CharacterEllipsis">
                                    <ToolTipService.ToolTip>
                                        <ToolTip Content="{x:Bind Reclamante.CpfFormatado}" Placement="Mouse"/>
                                    </ToolTipService.ToolTip>
                                </TextBlock>

                                <TextBlock Text="{x:Bind DataAbertura, Converter={StaticResource NullToNAConverter}}" Grid.Column="3" FontSize="16" Margin="5" TextTrimming="CharacterEllipsis">
                                    <ToolTipService.ToolTip>
                                        <ToolTip Content="{x:Bind DataAbertura}" Placement="Mouse"/>
                                    </ToolTipService.ToolTip>
                                </TextBlock>

                                <TextBlock Text="{x:Bind DataCriacao, Converter={StaticResource NullToNAConverter}}" Grid.Column="4" FontSize="16" Margin="5" TextTrimming="CharacterEllipsis">
                                    <ToolTipService.ToolTip>
                                        <ToolTip Content="{x:Bind DataCriacao}" Placement="Mouse"/>
                                    </ToolTipService.ToolTip>
                                </TextBlock>

                                <TextBlock Text="{x:Bind DataAbertura, Converter={StaticResource NullToNAConverter}}" Grid.Column="5" FontSize="16" Margin="5" TextTrimming="CharacterEllipsis">
                                    <ToolTipService.ToolTip>
                                        <ToolTip Content="{x:Bind DataAbertura}" Placement="Mouse"/>
                                    </ToolTipService.ToolTip>
                                </TextBlock>

                                <TextBlock Text="{x:Bind Motivo.Nome, Converter={StaticResource NullToNAConverter}}" Grid.Column="6" FontSize="16" Margin="5" TextTrimming="CharacterEllipsis">
                                    <ToolTipService.ToolTip>
                                        <ToolTip Content="{x:Bind Motivo.Nome}" Placement="Mouse"/>
                                    </ToolTipService.ToolTip>
                                </TextBlock>

                                <TextBlock Text="{x:Bind Situacao, Converter={StaticResource NullToNAConverter}}" Grid.Column="7" FontSize="16" Margin="5" TextTrimming="CharacterEllipsis">
                                    <ToolTipService.ToolTip>
                                        <ToolTip Content="{x:Bind Situacao}" Placement="Mouse"/>
                                    </ToolTipService.ToolTip>
                                </TextBlock>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <ProgressRing x:Name="carregando" IsActive="False" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed" Margin="0, 0, 0, 10"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
                    <Button x:Name="BotaoPaginaAnterior" Content="Anterior" Click="PaginaAnterior_Click" />
                    <TextBlock Text="{x:Bind PaginaAtual, Mode=OneWay}" FontSize="18" VerticalAlignment="Center"/>
                    <Button x:Name="BotaoProximaPagina" Content="Próximo" Click="ProximaPagina_Click" />
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>