<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="PROARC.src.Views.ProcessosListaPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PROARC.src.Views"
    xmlns:models="using:PROARC.src.Models.Arquivos"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Border CornerRadius="10" Margin="50, 0">
        <Grid Padding="40" CornerRadius="10">
            <StackPanel Spacing="20">
                <!-- Cabeçalho -->
                <TextBlock Text="Lista de Processos" FontSize="24" FontWeight="Bold" />

                <!-- TreeView -->
                <TreeView ItemsSource="{Binding Processos}" CanDragItems="False" AllowDrop="True">
                    <TreeView.ItemTemplate>
                        <DataTemplate x:DataType="models:ProcessoAdministrativo">
                            <Grid RightTapped="Processo_RightTapped"
                                  PointerEntered="ProcessoItem_PointerEntered"
                                  PointerExited="ProcessoItem_PointerExited"
                                  ToolTipService.ToolTip="Detalhes do Processo"
                                  Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200" />
                                    <ColumnDefinition Width="200" />
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="200" />
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="200" />
                                    <ColumnDefinition Width="150" />
                                </Grid.ColumnDefinitions>

                                <!-- Título -->
                                <TextBlock Text="{x:Bind Titulo}" Grid.Column="0" FontSize="16" Margin="5" />
                                <!-- Nome do Reclamante -->
                                <TextBlock Text="{x:Bind Reclamante.Nome}" Grid.Column="1" FontSize="16" Margin="5" />
                                <!-- CPF do Reclamante -->
                                <TextBlock Text="{x:Bind Reclamante.Cpf}" Grid.Column="2" FontSize="16" Margin="5" />
                                <!-- Nome do Reclamado -->
                                <TextBlock Text="{x:Bind Reclamado.Nome}" Grid.Column="3" FontSize="16" Margin="5" />
                                <!-- Data de Criação -->
                                <TextBlock Text="{x:Bind DataDeCriacao}" Grid.Column="4" FontSize="16" Margin="5" />
                                <!-- Data da Audiência -->
                                <TextBlock Text="{x:Bind DataDaAudiencia}" Grid.Column="5" FontSize="16" Margin="5" />
                                <!-- Motivo -->
                                <TextBlock Text="{x:Bind Motivo.Nome}" Grid.Column="6" FontSize="16" Margin="5" />
                                <!-- Status -->
                                <TextBlock Text="{x:Bind Status}" Grid.Column="7" FontSize="16" Margin="5" />

                                <!-- Flyout para exibir detalhes -->
                                <FlyoutBase.AttachedFlyout>
                                    <Flyout>
                                        <StackPanel>
                                            <TextBlock Text="Detalhes do Processo" FontWeight="Bold" Margin="0,0,0,10" />
                                            <TextBlock Text="{x:Bind Reclamante.Nome}" />
                                            <TextBlock Text="{x:Bind Reclamado.Nome}" />
                                            <TextBlock Text="{x:Bind Motivo.Nome}" />
                                            <TextBlock Text="{x:Bind Status}" />
                                        </StackPanel>
                                    </Flyout>
                                </FlyoutBase.AttachedFlyout>
                            </Grid>
                        </DataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>
            </StackPanel>
        </Grid>
    </Border>
</Page>
