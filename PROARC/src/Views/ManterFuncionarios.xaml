<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="PROARC.src.Views.ManterFuncionarios"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PROARC.src.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">


    <Grid Background="#FAFAFA">
        <!-- Estilos Comuns -->
        <Grid.Resources>
            <Style TargetType="TextBox">
                <Setter Property="Margin" Value="5"/>
                <Setter Property="Padding" Value="10"/>
                <Setter Property="CornerRadius" Value="5"/>
            </Style>

            <ThemeShadow x:Name="SharedShadow" />
        </Grid.Resources>
        <ScrollViewer>
            <StackPanel Padding="20" Spacing="32" Margin="0,0,0, 40">
                <!-- Título -->
                <TextBlock Text="CONTROE de FUNCIONARIOS" 
                       FontSize="32" 
                       FontWeight="Bold" 
                       Margin="160,40, 160, 0" />

                <!-- Tabela -->
                <StackPanel Orientation="Horizontal" Margin="32,0,0,0">
                    <!-- Barra lateral azul -->
                    <StackPanel Background="#003366" Width="10" CornerRadius="10, 0, 0, 10" />

                        <!-- Conteúdo da seção Status -->
                    <StackPanel Padding="40" Background="#FFF" Width="1478" Spacing="20" CornerRadius="0, 10, 10, 0" x:Name="StatusSection" Shadow="{StaticResource SharedShadow}" >

                        <!-- Título -->
                        <TextBlock x:Name="TextBlockStatus" Text="Listar Funcionários" FontSize="20" FontWeight="SemiBold" />

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Padding="10" Margin="16, 0" Spacing="10">

                            <!-- barra de pesquisa -->
                            <TextBox x:Name="SearchBar"
                                 Width="200"
                                 Height="30"
                                 BorderThickness="1"
                                 BorderBrush="Gray"
                                 Padding="5"
                                 FontSize="14"
                                 Background="White"
                                 TextChanged="SearchBar_TextChanged"
                                 PlaceholderText="Pesquisar..."
                                 />
                       
                            <Button>
                                <Image Source="C:\Users\robso\Documents\faculdade\6 semestre\PI1\PROARC\PROARC\Assets\reload.png" Width="20" Height="20" />
                            </Button>
                            
                          
                        </StackPanel>
                        
                            <Grid Margin="0,40,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="250" />
                                    <ColumnDefinition Width="350" />
                                    <ColumnDefinition Width="250" />
                                    <ColumnDefinition Width="250" />
                                    

                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Identificador" Grid.Column="0" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="24"/>
                                <TextBlock Text="Nome" Grid.Column="1" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="24"/>
                                <TextBlock x:Name="TextBlockCargo" Text="Cargo" Grid.Column="2" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="24"/>
                                <TextBlock Text="DataCriação" Grid.Column="3" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="24"/>
                            </Grid>
                        <StackPanel Background="#003366" Width="auto" Height="10"  CornerRadius="10, 0, 0, 10" />


                        <ListView ItemsSource="{Binding ListaDeItens}" Height="300" Margin="30,0,0,0">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="250" />
                                                <ColumnDefinition Width="350" />
                                                <ColumnDefinition Width="250" />
                                                <ColumnDefinition Width="250" />
                                                <ColumnDefinition Width="250" />

                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="{Binding Identificador}" Grid.Column="0" Margin="5" />
                                            <TextBlock Text="{Binding Nome}" Grid.Column="1" Margin="5" />
                                            <TextBlock Text="{Binding Cargo}" Grid.Column="2" Margin="5" />
                                            <TextBlock Text="{Binding DataCriacao}" Grid.Column="3" Margin="5" />
                                           

                                            <StackPanel Orientation="Horizontal" Grid.Column="6" HorizontalAlignment="Center">
                                                <Button Content="Editar" Margin="5" Click="Editar_Click" />
                                                <Button Content="Excluir" Margin="5" Click="Excluir_Click" />
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                       
                    </StackPanel>
                </StackPanel>


                <StackPanel Orientation="Horizontal">
                    <!-- Cadastrar funcionario -->
                    <StackPanel Orientation="Horizontal" Margin="32,0,0,0">
                        <!-- Barra lateral azul -->
                        <StackPanel Background="#003366" Width="10" CornerRadius="10, 0, 0, 10" />
                        <!-- Conteúdo da seção cadastrar funcionario-->
                        <StackPanel Padding="40" Background="#FFF" Width="750" Spacing="20" CornerRadius="0, 10, 10, 0" x:Name="CadastrarFuncionarioSection" Shadow="{StaticResource SharedShadow}" >
                            <!-- Título -->
                            <TextBlock x:Name="TextBlockCadastrarFuncionario" Text="Cadastrar Funcionário" FontSize="20" FontWeight="SemiBold" />
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Padding="10" Margin="16, 0" Spacing="10">

                                <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
                                    <TextBlock Text="Nome" FontSize="14"/>
                                    <TextBox PlaceholderText="Insira o nome completo" Width="600" />
                                </StackPanel>

                                <!-- Segunda linha-->
                                <StackPanel Orientation="Horizontal">
                                    <StackPanel Orientation="Horizontal">
                                        <RadioButton x:Name="radio_Atendente" Content="Atendente" GroupName="TipeGroup"/>
                                        <RadioButton x:Name="radio_Consiliadora" Content="Consiliadora" GroupName="TipeGroup"/>
                                        <RadioButton x:Name="radio_Escrivao" Content="Escrivão" GroupName="TipeGroup"/>
                                    </StackPanel>
                                
                                    <!-- Botão de Cadastrar Funcionario -->
                                    <Button 
                                    Content="Cadastrar Funcionario" 
                                    HorizontalAlignment="Right" 
                                    Padding="30,10" 
                                    FontSize="16"
                                    Background="#003366" 
                                    Foreground="White" 
                                    Margin="0,0,180,0" 
                                    />
                                </StackPanel>
                                                        
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="32,0,0,0">
                        <StackPanel Background="#003366" Width="10" CornerRadius="10, 0, 0, 10" />
                        <StackPanel Padding="40" Background="#FFF" Width="750" Spacing="20" CornerRadius="0, 10, 10, 0" x:Name="CriarChaveSection" Shadow="{StaticResource SharedShadow}" >
                            <TextBlock x:Name="TextBlockCadastrarChave" Text="Criar Chave de Acesso" FontSize="20" FontWeight="SemiBold" />
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Padding="10" Margin="16, 0" Spacing="10">

                                <TextBox
                                x:Name="txtIdentificadorFuncionarioChave" PlaceholderText="Insira o Identificador do Funcionário"
                                HorizontalAlignment="Left"
                                Width="600" />

                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                    <TextBox
                                    x:Name="txtChaveAcesso"  PlaceholderText="Escreva a Chave. Ex: Leandro23-3-24"
                                    HorizontalAlignment="Left"
                                    Width="390" />

                                    <Button
                                    x:Name="btnCriarChaveAcesso"  
                                    Content="Criar Chave"
                                    HorizontalAlignment="Right"
                                    Padding="30,10"
                                    FontSize="16"
                                    Background="#003366"
                                    Foreground="White"
                                    Margin="0,0,180,0"
                                    Click="btnCriarChaveAcesso_Click"  />
                                </StackPanel>

                            </StackPanel>
                        </StackPanel>
                    </StackPanel>

                </StackPanel>




            </StackPanel>

        </ScrollViewer>

        <Popup x:Name="popupEdicao" Margin="800,400,0,0" IsOpen="False">
            
            <Border Background="White" BorderBrush="Gray" BorderThickness="1" Padding="10">
                <StackPanel >
                    <TextBlock Text="Detalhes do Item Selecionado" FontWeight="Bold" Margin="0,0,0,10"/>

                    <TextBlock Text="Nome:" FontWeight="Bold"/>
                    <TextBlock x:Name="txtNomeItem" Text="{Binding Nome}" Margin="0,0,0,10"/>

                </StackPanel>
            </Border>
        </Popup>



    </Grid>



</Page>
