<ContentDialog
    x:Class="PROARC.src.Views.EditMotivoDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Editar Motivo"
    PrimaryButtonText="Salvar"
    SecondaryButtonText="Cancelar"
    DefaultButton="Primary"
    CornerRadius="12"
    Background="White">

    <StackPanel Spacing="16" Padding="20" Background="White" CornerRadius="12">
        <TextBlock Text="Escolha o motivo:" FontSize="16" />
        <ComboBox x:Name="MotivosComboBox" PlaceholderText="Selecione um motivo" 
                  FontSize="14" CornerRadius="8" Padding="8"/>

        <TextBlock Text="Novo nome:" FontSize="16" />
        <TextBox x:Name="NomeTextBox" PlaceholderText="Digite o novo nome"
                 FontSize="14" CornerRadius="8" Padding="8"/>

        <Border Margin="0,20,0,0" Height="1" Background="LightGray"/>
    </StackPanel>
</ContentDialog>
