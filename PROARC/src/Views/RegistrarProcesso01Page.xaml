<Page
    x:Class="PROARC.src.Views.RegistrarProcesso01Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="#FAFAFA">
        <!-- Estilos Comuns -->
        <Grid.Resources>
            <Style TargetType="TextBox">
                <Setter Property="Margin" Value="5"/>
                <Setter Property="Padding" Value="10"/>
                <Setter Property="CornerRadius" Value="5"/>
            </Style>

            <ThemeShadow x:Name="SharedShadow" />
        </Grid.Resources>
        <ScrollViewer>
            <StackPanel Padding="20" Spacing="40">
                <!-- Título -->
                <TextBlock Text="CADASTRAR PROCESSO ADMINISTRATIVO" 
                           FontSize="32" 
                           FontWeight="Bold" 
                           Margin="160,20,0,20" />

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Padding="10" Margin="160,0">
                    <Button x:Name="btnProcessoNovo" 
                        Content="Processo Novo" 
                        Width="224" Height="50" 
                        Padding="20,10" 
                        Background="#003366" 
                        Foreground="White" 

                        
                        Click="ProcessoNovo_Click" />
                    <Button x:Name="btnProcessoAntigo" 
                        Content="Processo Antigo" 
                        Width="224" Height="50"
                        Background="White" 
                        BorderBrush="#005BC1" 
                        Foreground="#003366"     
                        Click="ProcessoAntigo_Click" />
                </StackPanel>


                <StackPanel Orientation="Horizontal" Margin="160,0">

                    
                    <StackPanel Orientation="Vertical" Spacing="32">


                        <!-- Seção Processo / data -->
                        <StackPanel x:Name="MainStackPanel" Orientation="Horizontal" Opacity="1">
                            <StackPanel Background="#003366" Width="10" CornerRadius="10, 0, 0, 10" />
                            <StackPanel Orientation="Horizontal">
                                <StackPanel Padding="40" Background="#FFF" Spacing="10" Height="200" CornerRadius="0, 10, 10, 0" x:Name="NProcessoSection" Shadow="{StaticResource SharedShadow}" Width="796" Orientation="Horizontal">
                                    <StackPanel Orientation="Vertical">
                                        <TextBlock Text="N° Processo" FontSize="18" FontWeight="Bold" />
                                        <TextBox x:Name="inputNProcesso" PlaceholderText="Insira o n° do processo" Width="300" Text="{Binding NumeroProcesso}" IsReadOnly="False" />
                                    </StackPanel>
                                    <StackPanel Orientation="Vertical">
                                        <TextBlock Text="Ano" FontSize="18" FontWeight="Bold" />
                                        <TextBox x:Name="inputAnoProcesso" PlaceholderText="Insira o ano do processo" Width="300" Text="{Binding AnoProcesso}" IsReadOnly="False" />
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>

                        <!-- Seção Motivo e Audiência -->
                        <StackPanel Orientation="Horizontal" Spacing="32">

                            <!-- Seção Motivo -->
                            <StackPanel Orientation="Horizontal">
                                <StackPanel Background="#003366" Width="10" CornerRadius="10, 0, 0, 10" />
                                <StackPanel Padding="40" Background="#FFF" Spacing="10" Height="200" CornerRadius="0, 10, 10, 0" x:Name="MotivoSection" Shadow="{StaticResource SharedShadow}" Width="376">
                                    <TextBlock Text="Motivo" FontSize="18" FontWeight="Bold" />
                                    <ComboBox x:Name="cbMotivo" PlaceholderText="Selecione o motivo"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Seção Audiência -->
                            <StackPanel Orientation="Horizontal">
                                <StackPanel Background="#003366" Width="10" CornerRadius="10, 0, 0, 10" />
                                <StackPanel Padding="40" Height="200" Background="#FFF" Spacing="10" CornerRadius="0, 10, 10, 0" Width="376" x:Name="AudienciaSection" Shadow="{StaticResource SharedShadow}">
                                    <TextBlock Text="Audiência" FontSize="18" FontWeight="Bold" />
                                    <CalendarDatePicker x:Name="calendario" PlaceholderText="Escolha a data" />
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="32,0,0,0">
                        <!-- Barra lateral azul -->
                        <StackPanel Background="#003366" Width="10" CornerRadius="10, 0, 0, 10" />

                        <!-- Conteúdo da seção Status -->
                        <StackPanel Padding="40" Background="#FFF" Spacing="20" CornerRadius="0, 10, 10, 0" x:Name="StatusSection" Shadow="{StaticResource SharedShadow}" Width="638">
                            <!-- Título -->
                            <TextBlock Text="Status" FontSize="18" FontWeight="Bold" />

                            <!-- Status: Em tramitação -->
                            <StackPanel>
                                <TextBlock Text="Em tramitação" FontSize="14" FontWeight="SemiBold" Margin="0, 5"/>
                                <StackPanel>
                                    <RadioButton x:Name="radio_agRealizacaoAudiencia" Content="Aguardando realização da audiência" GroupName="StatusGroup" IsChecked="True"/>
                                    <RadioButton x:Name="radio_agResposta" Content="Aguardando resposta do reclamado" GroupName="StatusGroup"/>
                                    <RadioButton x:Name="radio_agEnvioNotificacao" Content="Aguardando envio de notificação" GroupName="StatusGroup"/>
                                    <RadioButton x:Name="radio_agDocumentacao" Content="Aguardando documentação das partes e assinatura" GroupName="StatusGroup"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Status: Arquivado -->
                            <StackPanel>
                                <TextBlock Text="Arquivado" FontSize="14" FontWeight="SemiBold" Margin="0, 5"/>
                                <StackPanel>
                                    <RadioButton x:Name="radio_atendido" Content="Atendido" GroupName="StatusGroup"/>
                                    <RadioButton x:Name="radio_naoAtendido" Content="Não Atendido" GroupName="StatusGroup"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>


                <!-- Contêiner principal para os dois StackPanels -->
                <StackPanel Orientation="Horizontal" Margin="160,0">
                    <!-- StackPanel adicional para a borda azul -->
                    <StackPanel Background="#003366" Width="10" CornerRadius="10, 0, 0, 10" />

                    <!-- Seção Reclamante -->
                    <StackPanel x:Name="ReclamanteSection" CornerRadius="0, 10, 10, 0" Shadow="{StaticResource SharedShadow}" Padding="40" Background="#FFF" Spacing="10" Width="1478">
                        <TextBlock Text="Reclamante" FontSize="18" FontWeight="Bold" />

                        <!-- Primeira Linha -->
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="Nome *" FontSize="14"/>
                                <TextBox x:Name="inputNome" PlaceholderText="Insira o nome completo" Width="300"/>
                            </StackPanel>
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="CPF *" FontSize="14"/>
                                <TextBox x:Name="inputCpfReclamante" PlaceholderText="Insira o CPF" Width="200"/>
                            </StackPanel>
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="RG *" FontSize="14"/>
                                <TextBox x:Name="inputRgReclamante" PlaceholderText="Insira o RG" Width="200"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <CheckBox x:Name="ProcuradorCheckBox" Content="Tem procurador" Margin="10" Checked="ProcuradorCheckBox_Checked" Unchecked="ProcuradorCheckBox_Unchecked" />
                    </StackPanel>
                </StackPanel>

                <!-- Contêiner principal para o StackPanel Procurador -->
                <StackPanel Orientation="Horizontal" Margin="160,0" Width="auto" >
                    <StackPanel Background="#003366" Width="10" CornerRadius="10, 0, 0, 10" />

                    <!-- Seção Procurador -->
                    <StackPanel CornerRadius="10" Padding="40" Background="#FFF" Spacing="10" Visibility="Collapsed" x:Name="ProcuradorSection" Shadow="{StaticResource SharedShadow}" Width="1478">
                        <TextBlock Text="Procurador" FontSize="18" FontWeight="Bold" />

                        <!-- Primeira Linha -->
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="Nome *" FontSize="14"/>
                                <TextBox PlaceholderText="Insira o nome completo" Width="300" />
                            </StackPanel>
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="CPF *" FontSize="14"/>
                                <TextBox PlaceholderText="Insira o CPF" Width="200" />
                            </StackPanel>
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="RG *" FontSize="14"/>
                                <TextBox PlaceholderText="Insira o RG" Width="200" />
                            </StackPanel>
                        </StackPanel>

                    </StackPanel>
                </StackPanel>


                <StackPanel Orientation="Horizontal" Margin="160,0">
                    <!-- StackPanel adicional para a borda azul -->
                    <StackPanel Background="#003366" Width="10" CornerRadius="10, 0, 0, 10" />

                    <!-- Primeira seção de Reclamado -->
                    <StackPanel Padding="40" Spacing="10" Background="#FFF" x:Name="ReclamadoSection" CornerRadius="0, 10, 10, 0" Shadow="{StaticResource SharedShadow}" Width="1478">
                        <!-- Título -->
                        <TextBlock Text="Reclamado" FontSize="18" FontWeight="Bold" />

                        <!-- Primeira Linha -->
                        <StackPanel Orientation="Horizontal" Spacing="20">
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="Instituição *" FontSize="14"/>
                                <TextBox x:Name="inputNomeRaclamado" PlaceholderText="Insira o nome da Instituição" Width="300" />
                            </StackPanel>
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="CNPJ/CPF *" FontSize="14"/>
                                <TextBox x:Name="inputIdentificador" PlaceholderText="Insira o CNPJ/CPF" Width="250" />
                            </StackPanel>
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="E-mail" FontSize="14"/>
                                <TextBox x:Name="inputEmail" PlaceholderText="Insira o E-mail" Width="250" />
                            </StackPanel>
                        </StackPanel>

                        <!-- Segunda Linha -->
                        <StackPanel Orientation="Horizontal" Spacing="20">
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="Rua" FontSize="14"/>
                                <TextBox x:Name="inputRua" PlaceholderText="Insira a rua" Width="300" />
                            </StackPanel>
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="Número" FontSize="14"/>
                                <TextBox x:Name="inputBairro" PlaceholderText="Insira o bairro" Width="280" />
                            </StackPanel>
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="Bairro" FontSize="14"/>
                                <TextBox x:Name="inputNumeroRua" PlaceholderText="Insira o número" Width="120" />
                            </StackPanel>
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="Cidade" FontSize="14"/>
                                <TextBox x:Name="inputCidadeReclamado" PlaceholderText="Insira a cidade" Width="180" />
                            </StackPanel>
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="UF" FontSize="14"/>
                                <TextBox x:Name="inputUfReclamado" PlaceholderText="Insira a UF" Width="100" />
                            </StackPanel>
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="CEP" FontSize="14"/>
                                <TextBox x:Name="inputCepReclamado" PlaceholderText="Insira o CEP" Width="150" />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <!-- Botão de Continuar -->
                <Button 
                    Content="Continuar" 
                    HorizontalAlignment="Right" 
                    Padding="20,10" 
                    Background="#003366" 
                    Foreground="White" 
                    Margin="0,0,56,0" 
                    Click="ContinuarButton_Click"/>
            </StackPanel>
            
            
            
            
        </ScrollViewer>
    </Grid>
</Page>
